<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/spacing_normal_16"
        android:background="?attr/cardBackgroundColor"
>
    <ru.skillbranch.devintensive.ui.custom.AvatarImageView
            android:id="@+id/iv_avatar_group"
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            app:cv_borderWidth="0dp"
            android:src="@drawable/ic_archive_black_24dp"
            android:layout_marginRight="@dimen/spacing_normal_16"
            alignParentLeft="true" />
    <TextView
            android:id="@+id/tv_title_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_archive_title"
            tools:text="Архив чатов"
            android:textColor="?attr/colorIcon"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_avatar_group"
            android:layout_toLeftOf="@+id/tv_date_group"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:maxLines="1"
    />
    <TextView
            android:id="@+id/tv_message_author_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="John Doe"
            android:textColor="@color/color_primary"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_avatar_group"
            android:layout_below="@id/tv_title_archive"
            android:layout_marginRight="@dimen/spacing_tiny_4"
    />
    <TextView
            android:id="@+id/tv_message_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Когда я проходил интенсив я мало спал"
            android:textColor="@color/color_gray_dark"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/tv_message_author_archive"
            android:layout_toLeftOf="@id/tv_counter_archive"
            android:layout_below="@id/tv_title_archive"
            android:layout_marginRight="@dimen/spacing_normal_16"
    />

    <TextView
            android:id="@+id/tv_date_group"
            android:text="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_dark"
            tools:text="18:00"
    />
    <TextView
            android:id="@+id/tv_counter_archive"
            android:text="10sp"
            android:minWidth="@dimen/counter_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/counter_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_tiny_4"
            android:paddingRight="@dimen/spacing_tiny_4"
            android:textColor="@android:color/white"
            tools:text="131"
            android:background="@drawable/bg_counter"



    />



</RelativeLayout>